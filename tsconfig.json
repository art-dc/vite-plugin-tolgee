{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "importsNotUsedAsValues": "remove",
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
